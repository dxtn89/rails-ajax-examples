<%# TODO style %>
<%= form_with model: @post, local: true do |f| %>
    <%= render "shared/validation-messages", object: f.object %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :body %>
    <%= f.text_area :body %>
    <%= f.label :author_id, "Author" %>
    <%# TODO allow a user to add a new author via AJAX %>
    <%= f.collection_select(:author_id, Author.all, :id, :formatted_name) %>
    <%= f.submit %>
<% end %>