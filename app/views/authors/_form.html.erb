<%# NOTE conditionally load an AJAX version of the form  %>
<% if params[:controller] === 'posts' %>
    <%= form_with model: @author, id: "author_form" do |f| %>
        <%= render 'authors/form-fields', f: f %>
    <% end %>
<% else %>
    <%= form_with model: @author, local: true  do |f| %>
        <%= render 'shared/validation-messages', object: f.object %>
        <%= render 'authors/form-fields', f: f %>
    <% end %>
<% end %>