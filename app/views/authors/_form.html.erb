<%# NOTE AUTHOR STEP 2: Conditionally load an AJAX version of the form when on `posts#new`.  %>
<% if params[:controller] === 'posts' %>
    <%# NOTE AUTHOR STEP 2: Assign the form an ID of `author_form` so that you can select the form when using javascript in `app/views/authors/create.js.erb`. %>
    <%# NOTE AUTHOR STEP 2: Don't add `local: true` to this form. Otherwise, AJAX will not work. %>
    <%= form_with model: @author, id: "author_form" do |f| %>
        <%= render 'authors/form-fields', f: f %>
    <% end %>
<%# NOTE AUTHOR STEP 2: Conditionally load a non-AJAX version of the form when on `authors#edit`. %>
<% else %>
    <%= form_with model: @author, local: true  do |f| %>
        <%= render 'shared/validation-messages', object: f.object %>
        <%= render 'authors/form-fields', f: f %>
    <% end %>
<% end %>